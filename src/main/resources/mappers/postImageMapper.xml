<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.pawin.post.dao.PostImageDAO">
 	<insert id="insertImagePost" parameterType="map">
 		INSERT INTO `imagepath`
 		(
	 		`userId`
	 		,`postId`
			,`imagePath`
			,`createdAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{postId}
 			, #{imagePath}
 			, NOW()
 		)
 	</insert>
 	<select	id="selectImagePathListByPostId" resultType="com.pawin.post.model.ImagePath">
 		SELECT
	 		`id`
			,`userId`
			,`postId`
			,`imagePath`
			,`createdAt`
		FROM
			`imagepath`
		WHERE
			`postId` = #{postId}
 	</select>
 	
 	<select id="selectIamgePathByPostId" resultType="com.pawin.post.model.ImagePath">
 		SELECT
	 		`id`
			,`userId`
			,`postId`
			,`imagePath`
			,`createdAt`
		FROM
			`imagepath`
		WHERE
			`postId` = #{postId}
 	</select>
 	
 	<update id="updateImage" parameterType="map">
 	UPDATE `imagepath`
 	SET
 		`userId` = #{userId}
 		, `postId` = #{postId}
 		, `imagePath` = #{imagePath}
 		, `updatedAt` = NOW()
 	WHERE
 		`userId` = #{userId}
 		AND `postId` = #{postId}
 	</update>
 	
 	<delete id="deleteImage" parameterType="map">
 	DELETE
 	FROM
 		`imagepath`
 	WHERE
 		`userId` = #{userId}
 		AND `postId` = #{postId}
 	
 	</delete>
 
 </mapper>